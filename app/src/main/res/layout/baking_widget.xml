<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#09C">

        <ImageView
            android:contentDescription="@string/widget_previous_recipe"
            android:id="@+id/widget_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_keyboard_arrow_left" />

        <TextView
            android:id="@+id/widget_recipe_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:clickable="false"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="BROWNIES" />

        <ImageView
            android:contentDescription="@string/widget_next_recipe"
            android:id="@+id/widget_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="8dp"
            android:src="@drawable/ic_keyboard_arrow_right" />

    </LinearLayout>

    <ListView
        android:background="@android:color/white"
        android:id="@+id/widget_ingredient_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>